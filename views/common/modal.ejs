<script>
    $(document).ready(function () {
        $('.modal-background,.modal-close').click(function () {
            $('.modal').removeClass('is-active');
        });
        $('#login').click(function () {
            console.log('a');
            $('#login-modal').addClass('is-active');
        });
        $('#signup').click(function () {
            $('#signup-modal').addClass('is-active');
        });
        $('#report-computer').click(function () {
            <%
            if(!user){
            %>
            alert('로그인을 한 후에 작성하실 수 있습니다.');
            return;
            <%
            }
            %>
            $('#report-modal').addClass('is-active');
        });
        $('#add-laboratory').click(function () {
            $('#laboratory-modal').addClass('is-active');
        });
        $("#login-input").keypress(function (e) {
            if (e.keyCode == 13) {
                LogIn();
            }
        });
    });

    function Report() {

        if ($('#report-title').val().length == 0 || $('#report-content').val().length == 0) {
            alert('제목과 내용을 입력해주세요!');
            return;
        }
        var tags = [];
        const tagsText = $('#report-tags').val().split('#');
        for (let i = 0; i < tagsText.length; i++) {
            if (tagsText[i].trim().length > 0)
                tags.push(tagsText[i].trim());
        }
        tags = Array.from(new Set(tags));
        jQuery.ajax({
            url: '',
            type: 'POST',
            data: {title: $('#report-title').val(), content: $('#report-content').val(), tags: tags},
            dataType: 'json',
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
            success: function (result) {
                // result = JSON.parse(result);
                console.log(result);
                if (result.result === 'success') {
                    alert('성공적으로 추가했습니다.');
                    window.location.reload();
                } else {
                    alert('error! ' + result.error);
                }
            }
        });

    }

    function SignUp() {
        if ($('#signup-pw').val() !== $('#signup-pw2').val()) {
            alert('패스워드가 일치하지 않습니다.');
            return;
        }
        if ($('#signup-pw').val().length == 0) {
            alert('패스워드가 유효하지 않습니다.');
            return;
        }
        jQuery.ajax({
            url: '/signup',
            type: 'POST',
            data: $('#signup-form').serialize(),
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
            dataType: 'html',
            success: function (result) {
                result = JSON.parse(result);
                console.log(result);
                if (result.result === 'success') {
                    alert('회원가입을 완료했습니다.');
                    LogIn($('#signup-id').val(), $('#signup-pw').val());
                } else {
                    alert('error : ' + result.error);
                }
            }
        });
    }

    function LogIn(id, pw) {
        if (id && pw) {
            $('#login-id').val(id);
            $('#login-input').val(pw);
        }
        $('#login-form').submit();
    }
</script>
